  },
  "PathSetting": {

    "Template": "/data/app/template",
    "Share": "/data/app/share",
    "Upload": "/data/app/upload",
    "Stream": "/api/stream/download"

  },
  "Compression": {
    "EnableForHttps": true,
    "MimeTypes": [
      "text/css",
      "text/xml",
      "text/html",
      "text/plain",
      "application/xml",
      "application/javascript"
    ]
  },
  "HealthChecksUI": {
